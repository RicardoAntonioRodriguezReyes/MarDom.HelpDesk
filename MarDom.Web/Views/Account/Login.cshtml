@model MarDom.Web.Models.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>INSPINIA | Login</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/Fonts/font-awesome/css/font-awesome.css" rel="stylesheet">

    <link href="~/Content/animate.css" rel="stylesheet">
    <link href="~/Content/style.css" rel="stylesheet">
    <style>
        .gray-bg, .bg-muted {
    background-color: #ffffff;
}
    </style>
</head>

<body class="gray-bg">

    <div class="middle-box text-center loginscreen  animated fadeInDown">
        <div class="center-orientation">
         
  
            <a href="index.html" class="center"><img src="~/img/MaritimaDominicana.png" style="width: 100px;"></a>
</div>
        <div>
           
            @using (Html.BeginForm("Login", "Account", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
               
                <div class="form-group">
                    @Html.TextBoxFor(t => t.UserName, new { @class = "form-control", @placeholder = "Nombre de usuario" })

                </div>
              
                <div class="form-group">
                    @Html.TextBoxFor(t => t.Password, new { @class = "form-control", @placeholder = "Password", @type = "password" })

                </div>
              

                <button type="submit" class="btn btn-primary block full-width m-b">Entrar</button>

            }
            <p class="m-t"> <small>Retail &copy; @DateTime.Now.Year</small> </p>
        </div>
    </div>

</body>

</html>

@{
    ViewBag.Title = "Crear";
}

@section Styles {

<link href="~/Scripts/plugins/EasyAutocomplete-1.3.5/easy-autocomplete.min.css" rel="stylesheet" />
}
@section Scripts {
<script src="~/Scripts/plugins/EasyAutocomplete-1.3.5/jquery.easy-autocomplete.min.js"></script>

}

<div class="ibox float-e-margins" ng-controller="TicketController">
    <div class="ibox-content">
        <button class="btn btn-primary pull-right" type="submit">Nuevo Cliente</button>
        <div class="form-group">           
            <input id="NombreBuscarUsuario" class="form-control"  placeholder="Introduccir nombre de usuario "/>
        </div>                          
    </div>
</div>
<div class="ibox-content">
    <form method="get" class="form-horizontal">
        <div class="form-group">
            <label class="col-sm-2 control-label">Registro para : </label>

            <div class="col-sm-10"><input type="text" class="form-control" disabled="disabled"></div>
        </div>
        <div class="hr-line-dashed"></div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Organizacion</label>
            <div class="col-sm-10">
                <input type="text" disabled="disabled" class="form-control" > 
            </div>
        </div>
     
        <div class="form-group">
            <label class="col-sm-2 control-label">Tipo de solicitud</label>

            <div class="col-sm-10">
              @Html.DropDownList("Secciones", new SelectList(ViewBag.Secciones, "Id", "Descripcion"), new {@class= "form-control m-b"  ,@id= "Secciones" })
               
                
             
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Categoria</label>

            <div class="col-sm-10">


                @Html.DropDownList("Categorias", new SelectList(ViewBag.Categorias, "Id", "Descripcion"), new { @class = "form-control m-b" , @id = "Categorias" })


            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Problema relacionado</label>

            <div class="col-sm-10">


                @Html.DropDownList("Problemas", new SelectList(ViewBag.Problemas, "Id", "Descripcion"), new { @class = "form-control m-b", @id = "Problemas" })


            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Titulo de solicitud</label>

            <div class="col-sm-10">
                <input type="text" class="form-control"  required  >


            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">Descripcion de solicitud:</label>

            <div class="col-sm-10">
              

                <textarea class="form-control" rows="8" id="comment"></textarea>

            </div>
        </div>
       
        <div class="hr-line-dashed"></div>
        <div class="form-group">
            <div class="col-sm-4 col-sm-offset-2">
                <button class="btn btn-white" type="submit">Cancelar</button>
                <button class="btn btn-primary" type="submit">Crear</button>
            </div>
        </div>
        </form>
            </div>

    
